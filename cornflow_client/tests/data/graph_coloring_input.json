{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "nodes": {
            "description": "List of all nodes in the problem",
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "pairs": {
            "description": "Pairs of nodes that cannot share the same color",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "n1": {
                        "type": "integer"
                    },
                    "n2": {
                        "type": "integer"
                    }
                },
                "required": ["n1", "n2"]
            }
        }
    },
    "required": ["nodes", "pairs"]
}